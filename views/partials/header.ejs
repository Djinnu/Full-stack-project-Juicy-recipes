<html data-theme="light" lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css">
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://kit.fontawesome.com/e5a8cfb859.js" crossorigin="anonymous"></script>
    <title>Juicy Recipes</title>
  </head>
  <body>
    <div class="hero container-fluid">
        <nav>
            <ul>
              <li><a href="/"><strong>Juicy</strong></a></li>
              <li><a href="/upload" role="button">Post a recipe</a></li>
            </ul>
            <ul>
              <% if(user) { %>
                <li><a href="/feed">Discover</a></li>
                <li>
                  <details role="list" dir="rtl">
                    <summary aria-haspopup="listbox" role="button"><%=user.userName%></summary>
                    <ul role="listbox">
                      <li><a href="/profile">Profile</a></li>
                      <li><a href="/logout">Log out</a></li>
                    </ul>
                  </details>
                </li>
              <% } else { %> 
                <li><a href="/feed">Discover</a></li>
                <li><a href="/login">Log in</a></li>
                <li><a href="/signup" role="button">Sign up</a></li>
              <% } %>
            </ul>
          </nav>
          <header class="container">
            <hgroup>
                <h1 style="color: #5e35b1; text-shadow: 1px 1px black">Juicy Recipes</h1>
                <h2 style="color: white; text-shadow: 1px 1px black">Share or discover something Yummy and savor the taste</h2>
            </hgroup>
          </header>
    </div>
  </body>
</html>
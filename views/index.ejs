<%- include('partials/header') -%>
    <main>
        <section class="slideshow-container">
            <h1 style="color: #5e35b1; text-shadow: 1px 1px black">Most popular recipes:</h1>
            <div class="mySlides fade">
                <% for(let i = 0; i < 4; i++) { %>
                    <article class="container-fluid index">
                        <a href="/post/<%= posts[i]._id%>">
                            <img src="<%= posts[i].image%>">
                        </a>
                        <div class="index-likes">
                            <span class="index-title"><%= posts[i].title%></span>
                            <span class="index-item"><i class="fa-regular fa-thumbs-up"></i> <%= posts[i].likes.length%></span>
                        </div>
                    </article>
                <% } %>
            </div>
            <div class="mySlides fade">
                <% for(let i = 4; i < 8; i++) { %>
                    <article class="container-fluid index">
                        <a href="/post/<%= posts[i]._id%>">
                            <img src="<%= posts[i].image%>">
                        </a>
                        <div class="index-likes">
                            <span><%= posts[i].title%></span>
                            <span><i class="fa-regular fa-thumbs-up"></i> <%= posts[i].likes.length%></span>
                        </div>
                    </article>
                <% } %>
            </div>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </section>
        <br>
        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
        </div>
      
    </main>
    <script src='js/main.js'></script>
</body>
</html>